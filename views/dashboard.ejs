<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= user.name %> <br> <%=user.email%></p>
<div><a href="/users/logout" class="btn btn-secondary">Logout</a>
</div>
<br>

<form action="/users/task" method="POST">
    <input type="hidden" name="_id" value="<%=user._id%>">
    <input type="hidden" name="task_id" value="<%=user.tasks._id%>">
    
         <div class="form-group row">
        
        <div class="col-12 col-sm-10">
            <input type="text" class="form-control" id="task" name="task" 
            placeholder="task" value="<%=user.tasks.task%>">
        </div>
        <div class="col-12 col-sm-2">
            <button type="submit" class="btn btn-info">Add task</button>
        </div>
    </div> 
    
</form> 

 
<% for (var i=user.tasks.length-1; i>=0; i--) { %>
      <form action="/users/tasks/<%=user._id%>/delete/<%=user.tasks[i]._id%>" method="GET">
         
        <div class="col-12 col-sm-10">
            <input type="text" class="form-control" id="task" name="task" 
            placeholder="task" value="<%= user.tasks[i].task %>">
        </div>
        <button type="submit" class="btn btn-info" 
        onclick="return confirm('Are you sure to delete this record ?');">Delete</button>
        <a href="/users/tasks/<%=user._id%>/update/<%=user.tasks[i]._id%>">Save</a>

          
        </form>
      <!-- <td>
          <a href="/index/<% user.tasks[i]._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
      </td> -->
  
<% } %>


<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h1>
        <form action="/users/update" method="POST">
            <input type="hidden" name="_id" value="<%=user._id%>">

          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%=user.name%>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%=user.email %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            UPDATE
          </button>
        </form>
      </div>
    </div>
  </div>
  